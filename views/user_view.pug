.card
  .card-content
    .media
      .media-left
        figure.image.is-50x50
          img(src='https://bulma.io/images/placeholders/96x96.png' alt='Placeholder image')
      .media-content
        p.title.is-4 #{nombre}
        p.subtitle.is-6 #{correo}
    .content
      p Editar:
      .tabs.is-toggle
        ul
          li
            a#editm
              span.icon.is-small
                i.fas.fa-envelope(aria-hidden='true')
              span Mail
                li
                  a#editp
                    span.icon.is-small
                      i.fas.fa-lock(aria-hidden='true')
                    span Password
                    
