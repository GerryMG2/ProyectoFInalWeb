form#form-reserva
    .field.is-horizontal
        .field-label.is-normal
            label.label.has-text-black.is-size-4(for="labo") Laboratorio:
        .field-body
            .field.has-addons
                .control.is-expanded
                    .select.is-fullwidth
                        select#opciones-labos.is-large(name="nameLabos")
    .field.is-horizontal
        .field-label.is-normal
            label.label.has-text-black.is-size-4(for="description") Descripcion:
        .field-body
            .field.has-addons
                .control.is-expanded
                    textarea#descText.textarea.is-medium(name="description", placeholder="Ingrese la descriptcion de la reserva")
    .field.is-horizontal    
        .field-label
        .field-body
            .field.is-grouped
                .control 
                    button#btn-horario.button.button.is-success.is-primary.is-medium Agregar horario
            .field.is-grouped
                .control 
                    button#btn-crear.button.is-info.is-medium Crear
            .field.is-grouped
                .control 
                    button#btn-actualizar.button.is-danger.is-medium Limpiar
